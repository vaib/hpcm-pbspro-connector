# Assumption:
# This wrapper script assumes
#  1) PBS Server/Scheduler is running on the HPCM Management Node.
#  2) Script is executed on the HPCM Management Node.

# Purpose:
# This wrapper script is used for registering or unregistering compute node(s)
# within PBS Professional.

# Source in PBS specific environment variables from pbs.conf
if [ -f /etc/pbs.conf ]; then
    . /etc/pbs.conf
else
    echo "Unable to find /etc/pbs.conf"
    exit 1
fi

# Simple Usage statement
Usage() {
    cat <<EOF
Usage: `basename $0` nodelist

nodelist can be a space-separated list or a file

EOF
    exit 0
}

while getopts hu opt; do
    case $opt in
        h|u) Usage ;;
    esac
done

# Setting up the variables in the order we are assuming they are passed in.
nodelist=$@    # if used w/ HPCM, this will be associated to CMU_TEMP_NODE_FILE

# Check to see if the nodes are provided as a file or a space-separated list of
# nodes names
if [ -f "$nodelist" ] ; then
    cmd=`cat $nodelist | sort`
else
    cmd="$nodelist"
fi
	# Pushing the nodelist through a for-loop to
	for node in $cmd ; do
         if [ "$(uname -n)" == "${PBS_SERVER}" ]; then
	    case `basename $0` in
		*unregister)    $PBS_EXEC/bin/qmgr -c "delete node ${node}";;
		*register)      $PBS_EXEC/bin/qmgr -c "create node ${node}";;
	    esac
         else
        # Pushing the nodelist through a for-loop to
            case `basename $0` in
                *unregister)    
                 ssh ${PBS_SERVER} "$PBS_EXEC/bin/qmgr -c \"delete node ${node}\"";;
                *register)      
                 ssh ${PBS_SERVER} "$PBS_EXEC/bin/qmgr -c \"create node ${node}\""

                 case "$node" in
		     gfx*)   ssh ${PBS_SERVER} "$PBS_EXEC/bin/qmgr -c \"set node ${node} queue = gfx \"";;
	         esac
                 ssh ${PBS_SERVER} "$PBS_EXEC/bin/qmgr -c \"set node ${node} power_provisioning=true \"";;
            esac

         fi
        done

